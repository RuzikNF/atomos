{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2020",
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ],
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
  }
}